{
  "tasks": {
    "clean": {
      "dest": "dist/*"
    },

    "img": {
      "src": "src/img/*",
      "opt": {
        "optimizationLevel": 5
      },
      "dest": "dist/img",
      "browserSyncOpt": {
        "once": true
      }
    },

    "js": {
      "src": "src/js/*.js",
      "buildFile": "main.min.js",
      "dest": "dist/js",
      "uglifyOpt": {
        "compress": {
          "drop_console": true
        }
      },
      "browserSyncOpt": {
        "once": true
      }
    },

    "coffee": {
      "src": "src/coffee/*.coffee",
      "buildFile": "main.min.js",
      "dest": "dist/js"
    },

    "jade": {
      "src": "src/jade/*.jade",
      "dest": "dist/",
      "browserSyncOpt": {
        "once": true
      }
    },

    "less": {
      "src": "src/less/*.less",
      "dest": "dist/css",
      "browserSyncOpt": {
        "once": true
      }
    },

    "sass": {
      "src": "src/scss/*.scss",
      "dest": "dist/css",
      "opt": {
        "sourceComments": false,
        "outputStyle": "expanded"
      },
      "browserSyncOpt": {
        "once": true
      }
    },

    "serve": {
      "watch": {
        "html": "src/*.html",
        "js": "src/js/*.js",
        "jade": "src/jade/*.jade",
        "less": "src/less/*.less",
        "sass": "src/scss/*.scss"
      },
      "browserSyncInit": {
        "server": "dist",
        "open": true
      }
    }
  }
}
