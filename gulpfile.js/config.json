{
  "tasks": {

    "sass": {
      "src": "app/scss/*.scss",
      "dest": "app/css",
      "opt": {
        "sourceComments": false,
        "outputStyle": "compressed"
      },
      "browserSyncOpt": {
        "once": true
      }
    },

    "serve": {
      "watch": {
        "html": "app/index.html",
        "js": "app/js/*.js",
        "sass": "app/scss/*.scss"
      },
      "browserSyncInit": {
        "server": "app",
        "open": true
      }
    }
  }
}
